{
    "compilerOptions": {
      "types": ["node"],
      "target": "ES5",
      "module": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      
      "strict": true,
      "lib": ["dom", "es5", "ES2015"],
      "skipLibCheck": true // Skips type checking of all declaration files
    },
    "exclude": [
      "node_modules/@types/text-encoding"
    ],
    "include": ["src/**/*.ts"]
  }
  